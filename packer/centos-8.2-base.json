{
  "builders": [{
    "name": "centos-8.2-base",
    "vm_name": "centos-8.2-base",
    "type": "vmware-iso",
    "guest_os_type": "centos8_64Guest",
    "tools_upload_flavor": "linux",
    "headless": false,

    "iso_url": "./CentOS-8.2.2004-x86_64-dvd1.iso",
    "iso_checksum": "sha256:c87a2d81d67bbaeaf646aea5bedd70990078ec252fc52f5a7d65ff609871e255",

    "ssh_username": "nullgrid",
    "ssh_password": "nullgrid",
    "ssh_timeout": "15m",
    "vnc_disable_password": "true",

    "disk_type_id": "thin",

    "floppy_files": [
      "preseed/ubuntu.cfg"
    ],

    "http_directory": "http",
    "http_port_min": "6001",
    "http_port_max": "6100",

    "boot_command": [
      "<esc><wait>",
      "vmlinuz ",
      " initrd=initrd.img ",
      " inst.stage2=hd:LABEL=CentOS-8-2-2004-x86_64-dvd ",
      " it_build_flag=PACKER ",
      " inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/RHEL8-ks.cfg ",
      " <wait10m> ",
      " <enter> "
    ],


    "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'nullgrid'|sudo -S sh 'shutdown.sh'",

    "remote_type": "esx5",
    "remote_host": "{{user `esxi_host`}}",
    "remote_datastore": "{{user `esxi_datastore`}}",
    "remote_username": "{{user `esxi_username`}}",
    "remote_password": "{{user `esxi_password`}}",
    "keep_registered": true,

    "vmx_data": {
      "ethernet0.networkName": "VM Network"
    }
  }]
}

